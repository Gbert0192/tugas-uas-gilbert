<main class="bg-gray-100 py-10">
  <div class="container mx-auto">
    <div class="relative bg-gray-300 mb-10">
      <img
        src="/img/home-page-banner.png"
        alt="Home Page Banner"
        class="w-full h-96 object-cover"
      />
      <span
        class="absolute left-4 top-1/2 transform -translate-y-1/2 text-black text-6xl font-bold"
      >
        From Desktop To Your Door
      </span>
    </div>
    <ul
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
    >
      <% products.forEach((product, index) => { %>
      <li>
        <div class="bg-white rounded-lg shadow-lg p-4">
          <img
            alt="<%= product.title %>"
            class="w-full h-48 object-cover rounded-lg mb-4"
            src="<%= product.thumbnail || '/img/placeholder.png' %>"
          />
          <h2 class="text-xl font-semibold mb-2"><%= product.title %></h2>
          <p class="text-gray-700 mb-2">
            Rp. <%= formatCurrency(product.price * 15000) %>
          </p>
          <p class="text-gray-700 mb-2">
            <%= product.tags[0] %> - <%= product.rating %>
            <i class="fas fa-star text-yellow-500"></i>
          </p>
          <!-- Trigger Modal -->
          <button
            class="addButton bg-green-500 text-white px-4 py-2 rounded-full mt-2"
            data-index="<%= index %>"
          >
            +
          </button>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>

  <!-- Modal -->
  <div
    id="popup-modal"
    class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex justify-center items-center z-50"
  >
    <div class="bg-white rounded-lg shadow-lg w-96 p-6 relative">
      <button
        type="button"
        class="absolute top-2 right-2 text-gray-500 hover:text-gray-800"
        id="close-modal"
      >
        âœ•
      </button>
      <div id="modal-body" class="text-center">
        <h3 class="text-lg font-medium text-gray-700 mb-4">
          Please Login Before Adding Items to Cart
        </h3>
        <button
          id="confirm-login"
          class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600"
          onclick="window.location.href='/auth/login'"
        >
          Login
        </button>
      </div>
    </div>
  </div>
  <%- include('paginationNav.ejs') %>
</main>
