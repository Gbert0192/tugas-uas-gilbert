<div class="container mx-auto p-4 max-w-lg flex items-center justify-center">
  <div class="bg-white shadow-sm rounded-lg p-4 sm:p-7">
    <div>
      <h1 class="block text-2xl font-bold text-gray-800">Secured Login</h1>
      <p class="mt-1 text-sm text-gray-600">
        Enter your registered phone number & The Password
      </p>
      <form class="mt-7" method="post" action="/auth/login" id="myForm">
        <!-- number phone input -->
        <div class="flex items-center border border-gray-200 rounded-md h-12">
          <span class="p-4 text-lg">+62</span>
          <input
            type="number"
            id="phoneNumber"
            class="block w-full text-lg disabled:pointer-events-none"
            required
            placeholder="82162625555"
            name="phoneNumber"
          />
        </div>
        <!-- password input -->
        <div class="mt-4">
          <span class="text-gray-800 font-bold text-xl">Password</span>
          <div class="flex items-center border border-gray-200 rounded-md h-12">
            <input
              type="password"
              id="password"
              class="block w-full text-lg disabled:pointer-events-none pl-3 placeholder-gray-500"
              required
              placeholder="Masukkan Password Anda"
              name="password"
            />
            <button
              type="button"
              id="togglePassword"
              class="flex items-center justify-center w-12 h-full text-gray-600 focus:outline-none"
            >
              <span id="toggleText">Show</span>
            </button>
          </div>
          <% if (messages.error) { %>
          <div class="bg-red-500 text-white p-4 rounded-md shadow-md mt-2">
            <%= messages.error %>
          </div>
          <% } %> <% if (messages.success_msg) { %>
          <div class="bg-green-500 text-white p-4 rounded-md shadow-md mt-2">
            <%= messages.success_msg %>
          </div>
          <% } %>
        </div>

        <button
          type="submit"
          class="mt-7 w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-3xl bg-green-500 text-white hover:bg-green-600 focus:outline-none focus:bg-green-600 h-12"
        >
          Continue
        </button>
      </form>
    </div>

    <div class="text-center mt-7">
      <p class="text-xs text-gray-500">
        2024 AIGIVEUP Inc.
        <a
          class="text-blue-500 hover:underline focus:outline-none focus:underline"
          href=""
          >Terms and Conditions.</a
        ><br />
        Invisible reCAPTCHA by Google
        <a
          href=""
          class="text-blue-500 hover:underline focus:outline-none focus:underline"
          >Privacy Policy</a
        >
        and
        <a
          href=""
          class="text-blue-500 hover:underline focus:outline-none focus:underline"
          >Terms of use</a
        >
      </p>
    </div>
  </div>
</div>
